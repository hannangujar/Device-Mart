<%= form_tag products_path method="get" do %>
  <%= select_tag :id, options_for_select(Company.all.collect { |p| [ p.name, p.id ] }), include_blank: true %>
    <%= submit_tag 'Filter' %>
<% end %>
<div class="products">
<h1>Products</h1>
<main class="card">
    <%= render @products %>  
</main>
</div>
<%= paginate @products %>